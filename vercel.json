{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["dist/**", "public/**", "views/**"]
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server.js"
      }
    ],
    "env": {
      "NODE_ENV": "production",
      "PGHOST": "@pghost",
      "PGDATABASE": "@pgdatabase",
      "PGUSER": "@pguser",
      "PGPASSWORD": "@pgpassword"
    }
  }