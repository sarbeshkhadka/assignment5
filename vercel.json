{
  "version": 2,
  "buildCommand": "npm install --no-audit --no-fund && npm run vercel-build",
  "outputDirectory": ".",
  "installCommand": "npm install --no-audit --no-fund --production=false",
  "framework": "nodejs",
  "includeFiles": [
    "public/**",
    "views/**",
    "models/**",
    "modules/**",
    "server.js",
    "package.json",
    "vercel.json"
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PGHOST": "@pghost",
    "PGDATABASE": "@pgdatabase",
    "PGUSER": "@pguser",
    "PGPASSWORD": "@pgpassword"
  }
}